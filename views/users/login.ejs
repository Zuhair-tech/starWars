<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
        <h5 class="text-warning card-title">Login</h5>
        <form action="/login" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
                <label class="text-warning form-label" for="username">Username</label>
                <input class="form-control" type="text" id="username" name="username" autofocus required>
            </div>
            <div class="mb-3">
                <label class="text-warning form-label" for="password">Password</label>
                <input class="form-control" type="password" id="password" name="password" required>
            </div>
            <button class="btn btn-success btn-block bg-warning">Login</button>
        </form>          
    </div>
</div>
