<% layout('/layouts/boilerplate') %>

<div class="row">
    <h1 class="text-warning text-center"> Edit Artpiece</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/arts/<%= art._id%>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="text-warning form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="art[title]" required>
            </div>
            <div class="mb-3">
                <label class="text-warning form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="art[description]"
                    required></textarea>
            </div>
            <select name="art[category]" class="form-select mb-3" aria-label="Default select example">
                <option selected>Type of Art</option>
                <option value="Sketch">Sketch</option>
                <option value="Painting">Painting</option>
                <option value="Model">Model</option>
                <option value="Other">Other</option>
            </select>
            <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="text-warning form-file-input" id="image" name="image" multiple>
                    <label class="form-file-label" for="image">
                        <span class="text-warning form-file-text custom-file-label">Add more image(s)...</span>
                        <span class="text-warning form-file-button">Browse</span>
                    </label>
                </div>
            </div>
            <div class="mb-3">
                <% art.images.forEach(function(img, i) {  %>
                <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                </div>
                <label class="text-warning" for="image-<%=i%>">Delete?</label>
                <% })%>
            </div>
            <div class="mb-3">
                <button class="btn btn-warning">Update Artpiece</button>
            </div>
        </form>
    </div>
</div>

<a class="text-warning"href="/arts/<%=art._id%>">Cancel</a>

